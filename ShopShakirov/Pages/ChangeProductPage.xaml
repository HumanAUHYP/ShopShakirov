<Page x:Class="ShopShakirov.Pages.ChangeProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopShakirov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangeProductPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Индекс"/>
        <TextBlock Grid.Column="1" Text="Фото"/>
        <TextBlock Grid.Column="2" Text="Наименование"/>
        <TextBlock Grid.Column="3" Text="Описание"/>
        <TextBlock Grid.Column="4" Text="Ед.измерения"/>
        <TextBlock Grid.Column="5" Text="Страны"/>

        <TextBlock x:Name="tbID" Grid.Row="1" Text="Default"/>
        <Image Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" />
        <TextBox x:Name="tbxName" Grid.Column="2" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxDescription" Grid.Column="3" Grid.Row="1" VerticalAlignment="Top"/>
        <ComboBox Grid.Column="4" Grid.Row="1" VerticalAlignment="Top"/>
        

    </Grid>
</Page>
